<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaterialHijriCalendarView_parent">

        <attr name="mcv_dateTextAppearance_parent" format="reference"/>
        <attr name="mcv_weekDayTextAppearance_parent" format="reference"/>
        <attr name="mcv_headerTextAppearance_parent" format="reference"/>
        <attr name="mcv_arrowColor_parent" format="color"/>
        <attr name="mcv_leftArrowMask_parent" format="reference"/>
        <attr name="mcv_rightArrowMask_parent" format="reference"/>
        <attr name="mcv_selectionColor_parent" format="color"/>

        <attr name="mcv_showOtherDates_parent" format="integer">
            <flag name="none" value="0" />
            <flag name="other_months" value="1" />
            <flag name="out_of_range" value="2" />
            <flag name="decorated_disabled" value="4" />
            <flag name="defaults" value="4" />
            <flag name="all" value="7" />
        </attr>

        <attr name="mcv_weekDayLabels_parent" format="reference" />
        <attr name="mcv_monthLabels_parent" format="reference" />

        <attr name="mcv_tileSize_parent" format="dimension"/>

        <attr name="mcv_firstDayOfWeek_parent" format="enum">
            <enum name="sunday" value="1" />
            <enum name="monday" value="2" />
            <enum name="tuesday" value="3" />
            <enum name="wednesday" value="4" />
            <enum name="thursday" value="5" />
            <enum name="friday" value="6" />
            <enum name="saturday" value="7" />
        </attr>

    </declare-styleable>

</resources>
